      box-shadow: 0 20px 60px rgba(233, 105, 148, 0.25),
                  0 0 0 1px rgba(255, 255, 255, 0.8);
      text-align: center;
      animation: cardIn 1s ease-out;
    }

    @keyframes cardIn {
      from {
        opacity: 0;
