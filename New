      padding: 0;
      box-sizing: border-box;
    }

    body {
      min-height: 100vh;
      overflow-x: hidden;
      font-family: 'Quicksand', sans-serif;
      background: linear-gradient(135deg, #ffeef2 0%, #ffe0e9 25%, #ffd1dc 50%, #ffc0cb 75%, #ffb6c1 100%);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      position: relative;
    }

    /* Floating hearts background */
    .hearts-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 0;
    }

    .heart-float {
      position: absolute;
      font-size: 1.5rem;
      opacity: 0.4;
      animation: float 6s ease-in-out infinite;
    }

    .heart-float:nth-child(1) { left: 10%; animation-delay: 0s; }
    .heart-float:nth-child(2) { left: 25%; animation-delay: 1s; }
    .heart-float:nth-child(3) { left: 40%; animation-delay: 2s; }
    .heart-float:nth-child(4) { left: 55%; animation-delay: 0.5s; }
    .heart-float:nth-child(5) { left: 70%; animation-delay: 1.5s; }
    .heart-float:nth-child(6) { left: 85%; animation-delay: 2.5s; }
    .heart-float:nth-child(7) { left: 15%; top: 60%; animation-delay: 3s; }
    .heart-float:nth-child(8) { left: 80%; top: 70%; animation-delay: 1s; }

    @keyframes float {
      0%, 100% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
      10% { opacity: 0.4; }
      90% { opacity: 0.3; }
      100% { transform: translateY(-20vh) rotate(360deg); opacity: 0; }
    }

    .card {
      position: relative;
