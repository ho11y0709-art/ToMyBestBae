<body>
  <div class="hearts-bg" id="heartsBg"></div>

  <div class="card">
    <h1>Would You Be MY VALENTINE?</h1>
    <div class="buttons-wrap" id="buttonsWrap">
      <button class="btn btn-yes" id="btnYes">Yes</button>
      <button class="btn btn-no" id="btnNo">No</button>
    </div>
    <p class="yes-response" id="yesResponse">
      Yay! You made my day! üíï Love you! üåπ
    </p>
  </div>

  <script>
    // Floating hearts in background
    const hearts = ['üíï', 'üíó', 'üíñ', '‚ù§Ô∏è', 'üíù', 'üå∏'];
    const bg = document.getElementById('heartsBg');
    for (let i = 0; i < 8; i++) {
      const h = document.createElement('span');
      h.className = 'heart-float';
      h.textContent = hearts[Math.floor(Math.random() * hearts.length)];
      h.style.top = Math.random() * 100 + '%';
      h.style.animationDuration = (5 + Math.random() * 4) + 's';
      bg.appendChild(h);
    }

    function spawnHeart(x, y) {
      const heart = document.createElement('span');
      heart.className = 'click-heart';
      heart.textContent = ['üíï', 'üíó', '‚ù§Ô∏è', 'üíñ'][Math.floor(Math.random() * 4)];
      heart.style.left = x + 'px';
      heart.style.top = y + 'px';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 1000);
    }

    // No button runs away
    const wrap = document.getElementById('buttonsWrap');
    const btnNo = document.getElementById('btnNo');
    const btnYes = document.getElementById('btnYes');
    const yesResponse = document.getElementById('yesResponse');

    // Start No button to the right of center
    btnNo.style.left = '55%';
    btnNo.style.top = '50%';
    btnNo.style.transform = 'translate(-50%, -50%)';

    function moveNoButton() {
      const rect = wrap.getBoundingClientRect();
      const btnRect = btnNo.getBoundingClientRect();
      const padding = 16;
      const maxX = rect.width - btnRect.width - padding;
      const maxY = rect.height - btnRect.height - padding;
      const newX = padding + Math.random() * Math.max(0, maxX);
      const newY = padding + Math.random() * Math.max(0, maxY);
      btnNo.style.transform = 'none';
      btnNo.style.left = newX + 'px';
      btnNo.style.top = newY + 'px';
    }

    // Run away on hover (mouse entering the No button)
    btnNo.addEventListener('mouseenter', moveNoButton);
    // Also run away when cursor gets close (mousemove near button)
    wrap.addEventListener('mousemove', (e) => {
      const r = wrap.getBoundingClientRect();
      const br = btnNo.getBoundingClientRect();
      const dx = e.clientX - (br.left + br.width / 2);
      const dy = e.clientY - (br.top + br.height / 2);
      const dist = Math.sqrt(dx * dx + dy * dy);
      if (dist < 80) moveNoButton();
    });

    // Yes button: show message and hearts
    btnYes.addEventListener('click', (e) => {
      e.stopPropagation();
      yesResponse.classList.add('reveal');
      for (let i = 0; i < 12; i++) {
        setTimeout(() => {
          spawnHeart(
            e.clientX + (Math.random() - 0.5) * 120,
            e.clientY + (Math.random() - 0.5) * 120
          );
        }, i * 60);
      }
    });
  </script>
</body>
</html>
